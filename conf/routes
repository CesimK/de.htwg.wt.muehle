# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                          controllers.MuehleController.about

GET     /start                     controllers.MuehleController.muehle

GET     /new                       controllers.MuehleController.restart

GET     /:field                    controllers.MuehleController.place(field: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

